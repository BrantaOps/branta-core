/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./build",
    "types": [],
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "include": [
    "app/**/*"
  ],
  "exclude": [
    "app/**/*.spec.ts"
  ],
  "file": [
    "app/splash.html"
  ]
}
